<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/booksFragment">

    <fragment
        android:id="@+id/booksFragment"
        android:name="com.example.library.ui.books.BooksFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_books" >
        <action
            android:id="@+id/action_booksFragment_to_addBookFragment"
            app:destination="@id/addBookFragment" />
        <action
            android:id="@+id/action_booksFragment_to_editBookFragment"
            app:destination="@id/editBookFragment" />
    </fragment>
    <fragment
        android:id="@+id/addBookFragment"
        android:name="com.example.library.ui.add.AddBookFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_add_book" >
        <action
            android:id="@+id/action_addBookFragment_to_booksFragment"
            app:destination="@id/booksFragment" />
    </fragment>
    <fragment
        android:id="@+id/editBookFragment"
        android:name="com.example.library.ui.edit.EditBookFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_edit_book" >
        <action
            android:id="@+id/action_editBookFragment_to_booksFragment"
            app:destination="@id/booksFragment" />
        <argument
            android:name="bookData"
            app:argType="com.example.mylibrary.data.model.Book" />
    </fragment>
</navigation>